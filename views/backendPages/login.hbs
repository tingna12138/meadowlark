<script>
// var _hmt = _hmt || []

$(function($) {
  $('.login-button').on('click', eve => {
    // 阻止登录按钮的默认事件
    eve.preventDefault()
    // 获取表单数据: 除了用submit事件（第八章），只能一个一个的获取
    // 验证用户名和密码格式；验证验证码是否正确
    // 登录密码加密
    var loginForm = {
      username: document.loginform.username.value,
      password: document.loginform.password.value
    }
    $.ajax({
      url: 'api/backend/login',
      method: 'POST',
      data: loginForm,
      success (res) {
        console.log(res)
      }
    })
  })
})
</script>
